{
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "jasmine": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": 3
  },
  "globals": {
    "spyOnEvent": false,
    "JSON": true
  },
  rules: {
    "camelcase": 1,
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "complexity": [1, 6],
    "curly": 1,
    "dot-notation": 0,
    "guard-for-in": 1,
    "indent": [1, 2, { "VariableDeclarator": 2 } ],
    "max-depth": [1, 2],
    "max-len": [1, 120],
    "max-params": [1, 10],
    "max-statements": [1, 20],
    "new-cap": [1, { properties: false }],
    "no-caller": 1,
    "no-eval": 1,
    "no-implied-eval": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-str": 0,
    "no-new": 1,
    "no-undef": 1,
    "no-unused-expressions": [1, { allowShortCircuit: true, allowTernary: true }],
    "no-unused-vars": [1, { "args": "after-used","vars": "all" }],
    "no-use-before-define": [1, "nofunc"],
    "quotes": [1, "single"],
    "semi": 1,
    "strict": 0,
    "wrap-iife": [1, "any"],
    "no-plusplus": 0
  },
  "root": true
}
